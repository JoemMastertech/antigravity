{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": null,
  "onReadyScript": null,
  "scenarios": [
    {
      "label": "Homepage - Layout",
      "url": "http://localhost:8081/",
      "readySelector": ".top-nav-bar",
      "delay": 3000,
      "removeSelectors": [
        "#background-video"
      ],
      "selectors": [
        "document"
      ],
      "misMatchThreshold": 0.5
    },
    {
      "label": "Hamburger Menu - Visible",
      "url": "http://localhost:8081/",
      "readySelector": ".hamburger-btn",
      "delay": 2000,
      "removeSelectors": [
        "#background-video"
      ],
      "selectors": [
        ".hamburger-btn"
      ],
      "misMatchThreshold": 0.1
    },
    {
      "label": "Drawer Menu - Opens",
      "url": "http://localhost:8081/",
      "readySelector": ".hamburger-btn",
      "delay": 2000,
      "clickSelector": ".hamburger-btn",
      "postInteractionWait": 1000,
      "removeSelectors": [
        "#background-video"
      ],
      "selectors": [
        ".drawer-menu"
      ],
      "misMatchThreshold": 0.5
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": [
    "browser"
  ],
  "engine": "puppeteer",
  "engineOptions": {
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage"
    ],
    "headless": "new"
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}